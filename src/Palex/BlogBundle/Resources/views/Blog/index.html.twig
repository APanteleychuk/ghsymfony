{% extends "PalexBlogBundle::layout.html.twig" %}

{% block page_title %}My Blog{% endblock %}

{% block content %}
        {% for post in posts %}
            {{ dump(post) }}
             <h2>{{ post.name }}</h2>
             <h2>{{ post.description }}</h2>
            {% if post.category_name != null %}
                <h1>Category - {{ post.category_name }}</h1>
            {% endif %}
            <hr>
        {% endfor %}
{% endblock %}
